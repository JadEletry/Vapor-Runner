#:kivy 1.0.7

<MenuWidget>:
    canvas.before:
        Color:
            rgba: 0, 0, 0, .6
        Rectangle:
            size: self.size
    Label:
        font_name: 'fonts/FastHand-LgBMV.ttf'
        font_size: dp(100)
        # We use root and parent because the parent of menu is our mainwidget and our root is main
        text: root.parent.menu_title
        pos: 
    Button:
        font_name: 'fonts/FastHand-LgBMV.ttf'
        font_size: dp(40)
        text: root.parent.menu_button_title
        pos_hint: { "center_x": .5, "center_y": .3}
        size_hint: .3, .15
        on_press: root.parent.menu_button_pressed()
        background_normal: ''
        background_color: .7, .49, 1, 1